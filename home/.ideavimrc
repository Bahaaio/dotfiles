" -- options --
set scrolloff=10
set incsearch
set ignorecase
set smartcase
set ideajoin
set number
set relativenumber
set hlsearch
set notimeout

" -- plugins --
set mini-ai
set NERDTree
set surround
set which-key
set highlightedyank
set argtextobj
set functiontextobj
set easymotion

" -- keymaps --
let mapleader=" "

" Window Navigation
nmap <C-h> <C-w>h
nmap <C-l> <C-w>l
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k

let g:WhichKeyDesc_quit = "<leader>q Hide/Toggle all Windows"
nmap <leader>q <Action>(HideAllWindows)

" General Mappings
nmap <C-S> :w<CR>
nnoremap <expr> <Esc> v:hlsearch ? ':nohlsearch<CR>' : '<Esc>'

let g:WhichKeyDesc_line_below = "]<space> add empty line below cursor"
